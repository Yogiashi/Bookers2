<div>
  <h2>User info</h2>

  <%= form_with model: @user do |f| %>
  <div>
    <%= f.label :Name %><br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :Image %><br>
    <%= f.file_field :profile_image 
  </div>
  <div>
    <%= f.label :Introduction %><br>
    <%= f.text_area :introduction %>
  </div>
  <%= f.submit 'Update User' %>
  <% end %>
</div>
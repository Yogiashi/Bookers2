<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <!--ここから部分テンプレート-->
      <%=render 'books/user_info', user: @user %>
      <%=render 'books/new_book', book: @book %>
      <!--ここまで部分テンプレート-->
    </div>
    <div class="col-md-8">
       <h2>Books</h2>
            <table class="table table-striped">
              <tr>
                <th></th>
                <th>Tilte</th>
                <th>Opinion</th>
              </tr>
              <% @books.each do |book| %>
              <tr>
                <td>
                <%= link_to user_path(@user) do %>
                <%= image_tag book.user.get_profile_image(80, 80) %>
                <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
            </table>
    </div>
  </div>
</div>
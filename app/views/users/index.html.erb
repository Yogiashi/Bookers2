<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <!--ここから部分テンプレート-->
      <%= render 'books/user_info', book: @user_info %>
      <!--ここまでテンプレート-->
    </div>
    <div class="col-lg-8">
    <h2>Users</h2>
    <table class="table table-stripes">
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    
    <% @users.each do |user| %>
    
      <tr>
        <td><%= image_tag user.get_profile_image(80, 80) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "show", user_path(user.id) %></td>
      </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>
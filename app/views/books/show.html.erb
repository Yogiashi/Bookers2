<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <!--ここから部分テンプレート-->
      <%= render 'user_info', user: @user %>
      <%= render 'new_book', book: @book %>
      <!--ここまで部分テンプレート-->
      </div>
      
      <div class="col-md-8">
      <h1>Book detail</h1>
      
      <table class="table table-striped">
          <tr>
            <td></td>
            <td><%= image_tag @book.user.get_profile_image(80, 80) %><br><%= link_to @book.user.name, user_path(@user) %></td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book) %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？"%></td>
            <% end %>
          </tr>
        </table>
    </div>
  </div>
</div>
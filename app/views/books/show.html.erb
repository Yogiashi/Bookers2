
<div class="container">
  <div class="row">
    <div class="col-lg-4">
    <!--ここから部分テンプレート-->
    <%= render 'user_info', book: @user_info %>
    <!--ここまで部分テンプレート-->
    </div>
    <div class="col-lg-8">
    <h2>Book detail</h2>
    <table class="table table-striped">
      <tr>
        <td></td>
        <td><%= image_tag @book.user.get_profile_image(80, 80) %><br><%= link_to @book.user.name, books_path %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book) %></td>
        <td><%= link_to "Dstroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？"%><td>
      </tr>
    </table>
    </div>
  </div>
</div>
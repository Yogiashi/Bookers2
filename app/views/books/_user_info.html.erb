<h1>User info</h1>

 <%= image_tag user.get_profile_image(80, 80) %>
 <table>
  <tr>
    <th><%= "name" %></th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th><%= "introduction" %></th>
    <td><%= user.introduction %></td>
  </tr>
</table>
<%= link_to edit_user_path(user), class: "w-50 btn btn-secondary" do %>
<i class="fas fa-user-cog"></i>
<% end %>

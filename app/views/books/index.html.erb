<%= flash[:notice] %>

<div class="container">
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <div class="row">
    <div class="col-lg-4">
      <!--ここから部分テンプレート-->
      <%=render 'user_info', user: @user %>
      <%=render 'new_book', book: @book %>
      <!--ここまで部分テンプレート-->
      </div>
      <div class="col-lg-8">
      <h1>Books</h1>
      
      <table class="table table-striped">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(80, 80) %></td> 
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

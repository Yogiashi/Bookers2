<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <!--ここから部分テンプレート-->
      <%= render 'user_info', book: @user_info %>
      <!--ここまで部分テンプレート-->
    </div>
    <div class="col-lg-8">
    <h2>Books</h2>
    <table class ="table table-striped">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(80, 80) %></td>
          <td><%= link_to  book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </div>
    </table>
  </div>
</div>
<!--ここから部分テンプレート-->
<div>
<h2>User info</h2>


<table>
  <tr>
    <th>name</th>
    <td>book.user</td>
  </tr>
  <tr>
    <th>introduction</th>
    <td>book.introduction</td>
  </tr>
</table>
</div>
<!--投稿フォーム-->
<div>
<h2>New Book</h2>

<%= form_with model: @book do |f| %>

<div>
<%= f.label :Title %><br>
<%= f.text_field :title %>
</div>

<div>
<%= f.label :Opinion %><br>
<%= f.text_area :body %>
</div>

<%= f.submit 'Create Book' %>
<% end %>
</div>
<!--ここまで部分テンプレート-->

<div>
<h2>Books</h2>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(80, 80) %></td>
      <td><%= link_to  book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>
</div>
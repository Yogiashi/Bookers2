<div>
  <h2>Editing Book</h2>
  
  <%= form_with model: @book do |f| %>
    <div>
      <%= f.label :Title %><br>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :Opinion %><br>
      <%= f.text_area :body %>
    </div>
    <%= f.submit 'Update Book' %>
  <% end %>
  
  <%= link_to "Show", book_path(@book) %>
  <%= "|" %>
  <%= link_to "Back", books_path %>
</div>
